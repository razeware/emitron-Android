<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:minHeight">@dimen/button_height_default</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingStart">@dimen/button_padding_internal</item>
    <item name="android:paddingEnd">@dimen/button_padding_internal</item>
    <item name="android:drawablePadding">@dimen/button_padding_internal</item>
    <item name="android:radius">@dimen/button_radius_default</item>
    <item name="android:fontFamily">@font/roboto</item>
  </style>

  <style name="Button.Colored" parent="Button">
    <item name="android:background">@drawable/button_color_1</item>
  </style>

  <style name="Button.Colored.3" parent="Button">
    <item name="android:background">@drawable/button_color_3</item>
  </style>

  <style name="Text" parent="TextAppearance.AppCompat" />

  <style name="Text.Headline" parent="Text">
    <item name="android:fontFamily">@font/bitter</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.Subtitle" parent="Text">
    <item name="android:fontFamily">@font/bitter</item>
    <item name="android:textSize">@dimen/text_size_subtitle</item>
    <item name="android:letterSpacing">0.15</item>
  </style>

  <style name="TextAppearance.Body" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:letterSpacing">0.5</item>
  </style>

  <style name="TextAppearance.Body.1" parent="TextAppearance.Body">
    <item name="android:textSize">@dimen/text_size_body_1</item>
    <item name="android:textColor">@color/textColorBody1</item>
  </style>

  <style name="TextAppearance.Body.2" parent="TextAppearance.Body">
    <item name="android:textSize">@dimen/text_size_body_2</item>
    <item name="android:textColor">@color/textColorBody2</item>
  </style>

  <style name="TextAppearance.Label" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/text_size_label</item>
    <item name="android:textColor">@color/textColorLabel</item>
  </style>

  <style name="TextAppearance.Label.Light" parent="Text">
    <item name="android:textColor">@color/textColorOverline</item>
  </style>

  <style name="TextAppearance.Caption" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">@dimen/text_size_caption</item>
    <item name="android:textColor">@color/textColorCaption</item>
  </style>

  <style name="TextAppearance.Footnote" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textSize">@dimen/text_size_footnote</item>
    <item name="android:textColor">@color/textColorFootnote</item>
  </style>

  <style name="TextAppearance.Overline" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/text_size_overline</item>
    <item name="android:textColor">@color/textColorOverline</item>
  </style>

  <style name="TextAppearance.Button" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/textColorButton</item>
  </style>

  <style name="TextAppearance.Button.Regular" parent="TextAppearance.Button">
    <item name="android:textSize">@dimen/text_size_button</item>
  </style>

  <style name="TextAppearance.Button.Small" parent="Text">
    <item name="android:textSize">@dimen/text_size_button_small</item>
  </style>

  <style name="TextAppearance.Headline.1" parent="Text.Headline">
    <item name="android:textSize">@dimen/text_size_h1</item>
    <item name="android:letterSpacing">-0.05</item>
  </style>

  <style name="TextAppearance.Headline.2" parent="Text.Headline">
    <item name="android:textSize">@dimen/text_size_h2</item>
  </style>

  <style name="TextAppearance.Headline.3" parent="Text.Headline">
    <item name="android:textSize">@dimen/text_size_h3</item>
  </style>

  <style name="TextAppearance.Headline.4" parent="Text.Headline">
    <item name="android:textSize">@dimen/text_size_h4</item>
  </style>

  <style name="TextAppearance.Headline.5" parent="Text.Headline">
    <item name="android:textSize">@dimen/text_size_h5</item>
  </style>

  <style name="TextAppearance.Body.Bold" parent="Text">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
